{
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "env": {
    "commonjs": true,
    "node": true
  },
  "rules": {
    "no-console": 0,
    "indent": 0,
    "prettier/prettier": [
      "error",
      {
        "parser": "flow",
        "printWidth": 100,
        "tabWidth": 2,
        "singleQuote": true,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "jsxBracketSameLine": false,
        "arrowParens": "always",
        "endOfLine": "auto",
        "overrides": [
          {
            "files": "*.json",
            "options": {
              "tabWidth": 4
            }
          }
        ]
      }
    ]
  },
  "plugins": ["prettier"]
}
